{
  "_comment":   "total, elements, orbitals, out, plot and plot_parms are optional",
  "data_type":  "dos",
  "fname":      "test/analysis/vasprun.xml",
  "total":      true,
  "elements":   ["S", "S"],
  "orbitals":   [["px", "py"], "all"],
  "plot":       true,
  "plot_parms":
  {
        "font family": "Times New Roman",
        "Set":
        {
            "line_width": 1,
            "linetype":  [],
            "_comment1": "optional, not supported yet",
            "legend":    [],
            "_comment2": "optional, not supported yet"
        },
        "_comment3": "required",

        "Axes":
        {
            "linewidth": 0.8,
            "_comment_lw": "optional, default to 1",
            "Xaxis":
            {
                "lim": [],
                "label": "Energy (eV)",
                "font size": 28,
                "_comment_label": "optioanl, default to 'Energy (eV), 28",
                "ticks": {"major spacing": 5, "minor spacing": 1},
                "major ticks parameters": {"length": 6, "width": 1, "fontsize": 24},
                "minor ticks parameters": {"length": 3, "width": 0.5}
            },
            "_comment_Xaxis": "optional",

            "Yaxis":
            {
                "lim": [],
                "label": "DOS (states/eV)",
                "font size": 28,
                "ticks": {"major spacing": 2, "minor ticks": 0.5},
                "major ticks parameters": {"length": 6, "width": 1, "fontsize": 24},
                "minor ticks parameters": {"length": 3, "width": 0.5}
            },
            "_comment_Yaxis": "optional"
        },
        "_comment_Axes": "optional",

        "Print":
        {
            "figaspect": 2,
            "fname":     "test/analysis/dos.pdf",
            "format":    "pdf",
            "dpi":       800
        }
  }
}
